<div class="mypage-wrapper">
  <div class="container">
    <div class="page-title">
      <h2>マイページ</h2>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="left-contents">
          <div class="title-area text-center">
            <h5>ユーザー情報</h5>
          </div>
          <div class="contents-area">
            <div class="icon-area">
                <%= image_tag @user.image_name.url %>
            </div>
            <div class="single-contents">
              <h6>ユーザー名</h6>
              <p><%= @user.name %></p>
            </div>
            <div class="single-contents">
              <h6>ユーザーID</h6>
              <p><%= @user.id %></p>
            </div>
            <div class="single-contents">
              <h6>メールアドレス</h6>
              <p><%= @user.email %></p>
            </div>
          </div>
          <div class="bottun-area">
            <%= link_to '⇨ 編集する', edit_user_path(@user.id), class: "btn-flat-border" %>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="right-contents">
          <div class="title-area text-left">
            <h5>人生設計について</h5>
          </div>
          <div class="des-area">
            <div class="single-contents-plan">
              <div class="icon">
                <%= image_tag 'icons/marriage.png' %>
              </div>
              <div class="contents">
                <h6>結婚について</h6>
                <% if @plan.read_attribute_before_type_cast(:marriage) == 9999 %>
                  <p>設定されていません</p>
                <% elsif @plan.read_attribute_before_type_cast(:marriage) == 2 || @plan.read_attribute_before_type_cast(:marriage) == 0 %>
                  <p><%= @plan.marriage %></p>
                <% else %>
                  <p><%= @plan.when_marriage %>で結婚する。結婚式は<%= @plan.wedding %>。</p>
                <% end %>
              </div>
            </div>
            <div class="single-contents-plan">
              <div class="icon">
                <%= image_tag 'icons/sons.png' %>
              </div>
              <div class="contents">
                <h6>こども</h6>
                <% if @plan.read_attribute_before_type_cast(:sons) == 9999 %>
                  <p>設定されていません</p>
                <% elsif @plan.read_attribute_before_type_cast(:sons) == 0 || @plan.read_attribute_before_type_cast(:sons) == 7 %>
                  <p><%= @plan.sons %></p>
                <% else %>
                  <p><%= @plan.when_first_son %>から<%= @plan.when_last_son %>までに<%= @plan.sons %></p>
                <% end %>
              </div>
            </div>
            <div class="single-contents-plan">
              <div class="icon">
                <%= image_tag 'icons/house.png' %>
              </div>
              <div class="contents">
                <h6>すまい</h6>
                <% if @plan.read_attribute_before_type_cast(:myhome) == 9999 %>
                  <p>設定されていません</p>
                <% elsif @plan.read_attribute_before_type_cast(:myhome) == 2 || @plan.read_attribute_before_type_cast(:myhome) == 0 %>
                  <p><%= @plan.myhome %></p>
                <% else %>
                  <p><%= @plan.when_myhome %>に購入する</p>
                <% end %>
              </div>
            </div>
            <div class="single-contents-plan">
              <div class="icon">
                <%= image_tag 'icons/others.png' %>
              </div>
              <div class="contents">
                <h6>お金・その他</h6>
                <% if @plan.updated_at == @plan.created_at %>
                  <p>設定されていません。</p>
                <% else %>
                  <p>貯金：<%= @plan.saving %>万円　退職金：<%= @plan.severance %>万円</p>
                <% end %>
              </div>
            </div>
          </div>
          <div class="bottun-area">
            <%= link_to '⇨ 編集する', edit_plan_path(@plan.user_id), class: "btn-flat-border" %>
          </div>
        </div>
        <div class="right-contents">
          <div class="title-area text-left">
            <h5>ライフイベントについて</h5>
          </div>
          <div class="des-area">
            <div class="single-contents-cost">
              <div class="icon">
                <%= image_tag 'icons/education.png' %>
              </div>
              <div class="contents">
                <h6>教育資金</h6>
                <% if @cost.updated_at == @cost.created_at %>
                  <p>設定されていません。</p>
                <% else %>
                  <p><%= @cost.edu_cost %>万円</p>
                <% end %>
              </div>
            </div>
            <div class="single-contents-cost">
              <div class="icon">
                <%= image_tag 'icons/old.png' %>
              </div>
              <div class="contents">
                <h6>老後の生活費</h6>
                <% if @cost.updated_at == @cost.created_at %>
                  <p>設定されていません。</p>
                <% else %>
                  <p><%= @cost.old_cost %>万円</p>
                <% end %>
              </div>
            </div>
            <div class="single-contents-cost">
              <div class="icon">
                <%= image_tag 'icons/marriage.png' %>
              </div>
              <div class="contents">
                <h6>結婚費用</h6>
                <% if @cost.updated_at == @cost.created_at %>
                  <p>設定されていません。</p>
                <% else %>
                  <p><%= @cost.marriage_cost %>万円</p>
                <% end %>
              </div>
            </div>
            <div class="single-contents-cost">
              <div class="icon">
                <%= image_tag 'icons/house.png' %>
              </div>
              <div class="contents">
                <h6>住宅購入費</h6>
                <% if @cost.updated_at == @cost.created_at %>
                  <p>設定されていません。</p>
                <% else %>
                  <p><%= @cost.myhome_cost %>万円</p>
                <% end %>
              </div>
            </div>
            <div class="single-contents-cost">
              <div class="icon">
                <%= image_tag 'icons/others.png' %>
              </div>
              <div class="contents">
                <h6>その他の費用</h6>
                <% if @cost.updated_at == @cost.created_at %>
                  <p>設定されていません。</p>
                <% else %>
                  <p><%= @cost.others %>万円</p>
                <% end %>
              </div>
            </div>
          </div>
          <div class="bottun-area">
            <%= link_to '⇨ 編集する', edit_cost_path(@cost.user_id), class: "btn-flat-border" %>
          </div>
        </div>
      </div>
    </div>
