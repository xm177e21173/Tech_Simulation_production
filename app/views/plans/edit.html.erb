<div class="plan-edit-wrapper">
  <div class="container users-new-container">
    <h1 class="text-center text-gray">人生について考える</h1>
    <div class="row">
      <div class="col-md-offset-4 col-md-4 plans_new_container">
          <%= form_for @plan do |f| %>
            <div class="form-group">
              <%= f.label :あなたは何年生まれですか？, class: 'text-gray' %>
              <%= f.text_field :birth, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :結婚はしたいですか？, class: 'text-gray' %>
              <%= f.text_field :marriage, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :子どもは何人ほしいですか？, class: 'text-gray' %>
              <%= f.text_field :sons, class: "form-control" %>
            </div>
            <%= f.submit "Simulation", class: "btn-block btn-gray" %>
          <% end %>
      </div>
    </div>
  </div>
</div>